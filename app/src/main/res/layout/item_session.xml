<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Rushil Rai"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#181818"
        android:layout_marginVertical="16dp"

        />
    <TextView
        android:id="@+id/timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="14.00 - 15.00"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#181818"
        android:layout_marginVertical="16dp"
        />

    <TextView
        android:id="@+id/skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mentor_name"
        android:text="Flutter"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:textColor="#181818"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timings"
        android:text="24/10/21"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:textColor="#181818"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/session_type_card"
        android:layout_width="125dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/skill"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#E8C9D1"
        app:cardCornerRadius="5dp"
        >
        <TextView
            android:id="@+id/session_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentorship"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:textColor="#181818"
            android:textSize="14sp"
            />
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/session_type_card"
        app:layout_constraintBottom_toBottomOf="@id/session_type_card"/>
    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/session_type_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>